package POO;

public class Personne {
	// Les attributs / proprietés
	public String nom;
	private String prenom;
	private String email;
	private int age;
	
	//Constructeur sans parametre
	public Personne() {
		super();
		this.nom="AFPA";
	}
	
	//Constructeur avec parametre
	
	public Personne(String nom_param, String prenom, String email, int age) {
		super();
		this.nom = nom_param;
		this.prenom = prenom;
		this.email = email;
		this.age = age;
	}

	public Personne(int age,String email) {
		super();
		
	}

	@Override
	public String toString() {
		return "Personne [nom=" + nom + ", prenom=" + prenom + ", email=" + email + ", age=" + age + "]";
	}

	//get = getter = les accesseurs
	public String getPrenom() {
		return prenom;
	}

	// set = setter = les mutateurs
	public void setPrenom(String prenom_modif) {
		this.prenom = prenom_modif;
	}
	
	public void direBonjour() {
		System.out.println("Bonjour");
	}
}
